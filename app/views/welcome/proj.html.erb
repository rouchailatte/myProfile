<script type="text/javascript">
  
  $.fn.slideFadeToggle = function(){
    return this.animate({ opacity: 'toggle', height: 'toggle' }, 350, 'swing');
  };


  function toggle(buttonId, responderId){
    var rotate = false;
    $(buttonId).on('click', function(){
    $(responderId).slideFadeToggle();
    if(!rotate)
    {
      $(buttonId).addClass('rotate');
      rotate = true;
    }
    else
    {
      $(buttonId).removeClass('rotate');
      rotate = false;
    }
  });

  }

  toggle('#buttonThree', '.responderThree');

</script>